{
  "name": "trello-task-manager",
  "version": "1.0.0",
  "description": "A system tray app to quickly check your next Trello task",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "dev": "nodemon --exec electron . --ext js,html",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "trello",
    "productivity",
    "task-management",
    "system-tray"
  ],
  "author": "Isak Gr√∂nlund",
  "license": "MIT",
  "build": {
    "appId": "com.isakgronlund.trello-task-manager",
    "productName": "Trello Task Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "renderer.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "axios": "^1.10.0",
    "canvas": "^3.1.1",
    "marked": "^15.0.12"
  },
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
}
